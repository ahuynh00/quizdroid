<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <EditTextPreference
        android:title="URL"
        android:key="dataURL"
        android:summary="The URL of the questions data you would like to download"
        android:dialogTitle="Question data URL" />

    <EditTextPreference
        android:title="Download interval"
        android:key="interval"
        android:inputType="number"
        android:summary="Interval between downloads in minutes"
        android:dialogTitle="Interval (Minutes)" />
</PreferenceScreen>